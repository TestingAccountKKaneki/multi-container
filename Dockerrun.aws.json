{
    "AWSEBDockerrunVersion": 2,
    "containerDefinations": [
        {
            "name": "client",
            "image": "kkaneki/client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "kkaneki/server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "kkaneki/worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "kkaneki/nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings" : [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        }
    ]
}